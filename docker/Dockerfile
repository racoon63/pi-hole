FROM pihole/pihole

ENV DNS1=1.1.1.1
ENV DNS2=8.8.8.8
ENV DNSMASQ_LISTENING=
ENV DNSMASQ_USER=
ENV DNSSEC=true
ENV IPv6=
ENV INTERFACE=
ENV ServerIP='0.0.0.0'
ENV ServerIPv6=
ENV TZ='Europe/Berlin'
ENV VIRTUAL_HOST=
ENV WEB_PORT=
ENV WEBPASSWORD='supersecret1234'

COPY etc/lists /etc/pihole/

WORKDIR /
